<%- include("header") %>
<h2>clicks: <%- clicks %></h2>
<h2>pairs: <%- left %> / <%- pairs %></h2>
<div class="container">
  <div class="row">
    <% pokemon.forEach(function(mon, index) { %>
      <% if (index % 4 === 0) { %>
        <div class="row">
      <% } %>
      <div class="col-md-3">
        <%- include("card", {pokemon: mon, pos: index}) %>
      </div>
      <% if (index % 4 === 3 || index === pokemon.length - 1) { %>
        </div>
      <% } %>
    <% }) %>
  </div>
</div>

<%- include("footer") %>

